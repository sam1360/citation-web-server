{
    "extends": "airbnb-base",
    "plugins": [
        "import"
    ],
    "rules": {
        "max-len": "off",
        "brace-style": ["error", "stroustrup"],
        "no-unused-vars": ["error", { "args": "none" }],
        "no-bitwise": "off"
    },
    "env": {
        "node": true,
        "jquery": true,
        "browser": true
    }
}
